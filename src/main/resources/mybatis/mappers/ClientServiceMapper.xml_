<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mapper.java namespace -->
<mapper namespace="ru.stepanov.db.mapper.ClientMapper">

    <!-- namespace -->
    <resultMap type="ru.stepanov.db.domain.Client" id="ClientResult3">
        <id column="id" property="id"/>
        <result property="name" column="name"/>
        <result property="login" column="login"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="type" column="type"/>
    </resultMap>

    <select id="getAll" resultMap="ClientResult3">
        SELECT * FROM client
    </select>

    <delete id="deleteById" parameterType="int">
        DELETE FROM client WHERE ID = #{id}
    </delete>

    <insert id="insertClient" parameterType="Client" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO client (name, login, password, email, type)
        VALUES(#{name}, #{login}, #{password}, #{email}, #{type})
    </insert>

    <update id='updateById' parameterType='Client'>
        UPDATE client SET
        name = #{name},
        login = #{login},
        password = #{password},
        email = #{email},
        type = #{type}
        WHERE id = #{id}
    </update>

</mapper>